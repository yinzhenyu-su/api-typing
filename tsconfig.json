{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "outdir",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "DOM",
      "ESNext",
    ],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "api-typing": [
        "."
      ],
      "@/src/*": [
        "src/*"
      ],
      "@/test/*": [
        "src/test/*"
      ],
      "@/util/*": [
        "src/util/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/api-typing.ts",
    "api-typing-meta.d.ts",
    "scripts/init.js",
  ],
  "exclude": [
    "**/node_modules/**",
    "outdir/**",
    "scripts/**"
  ]
}